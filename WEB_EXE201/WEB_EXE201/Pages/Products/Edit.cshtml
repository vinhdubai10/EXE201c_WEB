@page
@model WEB_EXE201.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <!-- Display Current Image -->
            @if (Model.Product.ImageUrl != null)
            {
                <div class="form-group">
                    <label>Current Image:</label>
                    <img src="/images/@Model.Product.ImageUrl" alt="Product Image" width="200" />
                </div>
            }
            <div class="form-group">
                <label for="ImageUpload">Upload Image(optional):</label>
                <input type="file" name="ImageUpload" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.UserID" class="control-label"></label>
                <input asp-for="Product.UserID" class="form-control" readonly/>
                <span asp-validation-for="Product.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
